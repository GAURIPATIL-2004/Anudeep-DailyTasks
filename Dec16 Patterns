def half_10_right(n):
    for i in range(n):
        for j in range(n - i - 1):
            print(" ", end="")    
        for j in range(i + 1):
            if (i + j) % 2 == 0:
                print(1, end="")
            else:
                print(0, end="")
        print("")
n = int(input("No of rows and columns: "))
half_10_right(n)

            

