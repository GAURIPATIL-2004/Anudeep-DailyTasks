def half_10_left(n):
    for i in range(0,n):
        num=1
        for j in range(0,n-i-1):
            print("",end="")
        for j in range(0,i+1):
            if(i+j)%2==0:
                print(1,end="")
            else:
                print(0,end="")
        print("")
n=int(input("No of rows and coloms :"))
half_10_left(n)

