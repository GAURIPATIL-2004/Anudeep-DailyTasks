def inverted_full_triangle(n):
    for i in range(n,0,-1):
        for j in range(n-i):
            print(" ",end="")
        for k in range(2*i-1):
            print("*",end="")
        print("")
n=int(input("No of rows and coloms :"))
inverted_full_triangle(n)

